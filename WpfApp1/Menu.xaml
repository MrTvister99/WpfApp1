    </Page.Resources>



    <Grid Background="LightSkyBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition Width="49*" />
            <ColumnDefinition Width="261*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Background="LightSkyBlue" Grid.Column="0" Orientation="Vertical" Margin="0,0,10,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Поиск:" FontSize="12" FontWeight="Black" Margin="0,10,5,10"/>
                <TextBox Name="myTextBox1" TextChanged="myTextBox1_TextChanged" HorizontalAlignment="Stretch" Height="18" Width="150" Background="White" Margin="0,10,0,10" />
            </StackPanel>
            <ComboBox x:Name="comboBoxEquipment" SelectionChanged="ComboBoxEquipment_SelectionChanged" Margin="0,0,0,10" Width="162" />
            <Button Style="{DynamicResource ButtonStyle2}" Content="Вывести в Excel" Background="GreenYellow" Height="20" Width="150" Click="ExportToExcel" Margin="0,0,0,10"  />
            <Button Background="IndianRed" Style="{DynamicResource ButtonStyle2}" Content="Удалить" Height="20" Width="150"  Click="Button_Click_2" Margin="0,0,0,10" />
            <Button Background="Yellow" Style="{DynamicResource ButtonStyle2}" Content="Отметить как выполненое" Height="20" Width="150"  Click="ChangeStatusButton_Click" />
            <Label Content="Сортировка по дате:" Margin="0,10,0,0"></Label>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                <RadioButton x:Name="OldCheckBox" Content="Новые" Checked="OldCheckBox_Checked" Unchecked="OldCheckBox_Unchecked" Margin="5"/>
                <RadioButton x:Name="NewCheckBox" Content="Старые" Checked="NewCheckBox_Checked" Unchecked="NewCheckBox_Unchecked" Margin="5"/>
            </StackPanel>
        </StackPanel>

        <ListView  Background="White" Grid.Column="1" x:Name="TowarListView" HorizontalContentAlignment="Stretch" ItemsSource="{Binding application}" Margin="0,0,0,10" Grid.ColumnSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="90" Header="Дата заявки" DisplayMemberBinding="{Binding Date_add}" />
                    <GridViewColumn Width="100" Header="Название оборудования" DisplayMemberBinding="{Binding equipment}" />
                    <GridViewColumn Width="90" Header="Тип неисправвности" DisplayMemberBinding="{Binding type_of_fault}" />
                    <GridViewColumn Width="120" Header="Описание проблемы" DisplayMemberBinding="{Binding Problem}" />
                    <GridViewColumn Width="120" Header="Фамилия заказчика" DisplayMemberBinding="{Binding Users_FIO}" />
                    <GridViewColumn Width="90" Header="Статус работы" DisplayMemberBinding="{Binding Status}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
