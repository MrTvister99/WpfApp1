<Window x:Class="WpfApp1.WindowAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="WindowAdd" Height="450" Width="800">
    <Grid>
        
            <StackPanel>
            
            <Label Content="Название оборудования"/>
            <TextBox x:Name="Name_Product" />
            <Label Content="Тип неисправности"/>
            <TextBox x:Name="Fault" />
            <Label Content="Описание проблемы"/>
            <TextBox x:Name="Problem" />
            <Label Content="Введите Фамилию"/>
            <TextBox x:Name="FIO" />
            <Button Content="OK" Click="OkButton_Click" Width="473" />
        </StackPanel>

       
    </Grid>
</Window>
